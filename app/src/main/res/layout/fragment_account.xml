<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.AccountFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Account">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/baseline_arrow_back_ios_new_24" />

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins"
                android:text="Account"
                android:textColor="@color/navy"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/profil" />

        <LinearLayout
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="400dp"
            android:layout_marginStart="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usrname"
                android:textColor="@color/navy"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nadia.e.f"
                android:fontFamily="@font/poppins"
                android:textColor="@color/navy"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="470dp"
            android:layout_marginStart="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/navy"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/email2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nadiaekafebrianti@gmail.com"
                android:fontFamily="@font/poppins"
                android:textColor="@color/navy"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp">

            <TextView
                android:id="@+id/logout2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/baseline_keyboard_arrow_left_24"
                android:textColor="@color/navy"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/logoutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="103dp"
                android:layout_toRightOf="@id/logout2"
                android:fontFamily="@font/poppins_medium"
                android:text="Logout"
                android:textColor="@color/navy"
                android:textSize="18sp" />

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>